    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "args": [
                "--n_samples", "100",
                "--n_layers", "4",
                "--n_qubits", "4",
                "--n_steps", "20",
                "--max_isomorph_number", "2",
                "--max_job", "-1"
            ],
            "console": "integratedTerminal"
        }
    ]
}